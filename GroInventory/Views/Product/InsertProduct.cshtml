@model Product
<h2>Create a New Product</h2>

<p class="text-danger">
    required *
</p>
<br />

@using (Html.BeginForm("InsertProductToDatabase", "Product", "Post"))
{
    <label asp-for="UPCPLU" class="control-label">UPC/PLU</label><span style="color:red">*</span>
    <input type="text" name="UPCPLU" class="form-control" value="" />
    <br>

    <label asp-for="ProductName" class="control-label">Product Name</label><span style="color:red">*</span>
    <input type="text" name="ProductName" class="form-control" value="" />
    <br>

    <label asp-for="WarehouseCode" class="control-label">Warehouse Code</label>
    <input type="text" name="WarehouseCode" class="form-control" value="" />
    <br>

    <label asp-for="Split" class="control-label">Quantity /</label>
    <input type="number" step="1" min="1" name="Split" class="form-control" value="1" />

    <label asp-for="Price" class="control-label">Price</label><span style="color:red">*</span>
    <input type="number" step="0.01" min=".01" name="Price" class="form-control" />

    <label asp-for="PerPound" class="control-label">Per Pound?</label>
    <input type="checkbox" name="PerPound" id="PerPound" value="true" />
    <br>
    <br>

    <label asp-for="SaleSplit" class="control-label">Quantity /</label>
    <input type="number" step="1" min="1" name="SaleSplit" class="form-control" value="1" />

    <label asp-for="SalePrice" class="control-label">Sale Price</label>
    <input type="number" step="0.01" min=".00" name="SalePrice" class="form-control" value="@Model.SalePrice" />
    <br>

    <div class="form-group">
        <label for="">On Sale?</label>
        <select class="form-control" name="OnSale" value="">
            <option value="false" selected>No</option>
            <option value="true">Yes</option>
        </select>
    </div>
    <br>

    <label asp-for="UnitsPerCase" class="control-label">Units/Case</label>
    <input type="text" name="UnitsPerCase" min="1" class="form-control" value="" />
    <br>

    <label asp-for="CaseCost" class="control-label">Case Cost</label>
    <input type="text" name="CaseCost" min=".01" class="form-control" value="" />
    <br>

    <div class="form-group">
        <label asp-for="DeptID">Select a Department</label><span style="color:red">*</span>
        <select class="form-control" name="DeptID" value="">
            @foreach (var dept in Department.DeptList)
            {
                //if gets rid of 0 No Dept option
                @if (dept.DeptID > 0)
                {
                    <option value="@dept.DeptID"> @dept.DeptID @dept.DeptName</option>
                }
            }
        </select>
    </div>
    <br>

    <label asp-for="CurrentInventory" class="control-label">Current Inventory</label>
    <input type="text" name="CurrentInventory" class="form-control" value="" />
    <br>

    <input type="submit" value="Create Product" class="btn btn-primary" />

    <button type="button" class="btn btn-warning">
        <a class="text-light" href="/Product/Index/">Cancel</a>
    </button>
}