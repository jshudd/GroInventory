@model Product

<h3>@Model.ProductName Information</h3>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr class="text-center">
            <th>UPC/PLU</th>
            <th>Name</th>
            <th>Warehouse Code</th>
            <th>Current Price</th>
            <th>Regular Price</th>
            <th>Sale Price</th>
            <th>On Sale</th>
            <th>Like Code</th>
            <th>Units/Case</th>
            <th>Case Cost</th>
            <th>Profit/Unit</th>
            <th>Department</th>
            <th>Stock Level</th>
        </tr>
    </thead>
    <tr class="text-center">
        <td>@Model.UPCPLU</td>
        <td>@Model.ProductName</td>
        <td>@Model.WarehouseCode</td>
        <td>@Model.ConvertedCurrentPrice</td>
        <td>@Model.ConvertedPrice</td>
        <td>@Model.ConvertedSalePrice</td>
        <td>@Model.OnSale.ToYesNoString()</td>
        <td>@Model.LikeCodeID</td>
        <td>@Model.UnitsPerCase</td>
        <td>@Model.ConvertedCaseCost</td>
        <td>@Math.Round(Model.Profit, 2)%</td>
        <td>@Model.DeptName</td>
        <td>@Model.CurrentInventory</td>
    </tr>
</table>

<br>

<div>
    <button type="button" class="btn btn-primary">
        <a class="text-light" href="/Product/UpdateProduct/@Model.UPCPLU">Update this Product</a>
    </button>
</div>

<br>

<div style="display: block">
    @using (Html.BeginForm("DeleteProduct", "Product", "Post"))
    {
        <input type="hidden" asp-for="UPCPLU" value="@Model.UPCPLU" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this Product" class="btn btn-danger" />
    }
</div>